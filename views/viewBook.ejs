<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <base href="/">
  <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
  <link rel="icon" type="image/png" href="../assets/img/fam2.png">
  <title>
    FamPlan
  </title>
  <!--     Fonts and icons     -->
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
  <!-- Nucleo Icons -->
  <link href="../assets/css/nucleo-icons.css" rel="stylesheet" />
  <link href="../assets/css/nucleo-svg.css" rel="stylesheet" />
  <!-- Font Awesome Icons -->
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <!-- Material Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
  <!-- CSS Files -->
  <link id="pagestyle" href="../assets/css/material-dashboard.css?v=3.0.4" rel="stylesheet" />
</head>

<body class="g-sidenav-show  bg-gray-200">
  <script type="module" src="../views/index.ejs"></script>
  <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3   bg-gradient-dark" id="sidenav-main">
    <div class="sidenav-header">
      <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
      <a class="navbar-brand m-0" href="/">
        <img src="../assets/img/fam.png" class="navbar-brand-img h-200" style="width: 40px; height: 60px;" alt="main_logo">
        <span class="ms-1 font-weight-bold text-white">FamPlan</span>
      </a>
    </div>
    <hr class="horizontal light mt-0 mb-2">
    <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link text-white" href="/">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">dashboard</i>
            </div>
            <span class="nav-link-text ms-1">Dashboard</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white " href="/tables">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">table_view</i>
            </div>
            <span class="nav-link-text ms-1">Vacation Bucket List</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white active bg-gradient-primary" href="/readings">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">table_view</i>
            </div>
            <span class="nav-link-text ms-1">Family Reading</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white " href="/reminders">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">notifications</i>
            </div>
            <span class="nav-link-text ms-1">Reminders</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/calendar">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">today</i>
            </div>
            <span class="nav-link-text ms-1">Calendar</span>
          </a>
        </li>
      </ul>
    </div>
  </aside>
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
      <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="/">Dashboard</a></li>
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="/readings">Family Reading</a></li>
            <li class="breadcrumb-item text-sm text-dark active" aria-current="page">
                <%= data.scripturebook %> Details
            </li>
          </ol>
          <h4 class="font-weight-bolder mb-0">
            <% if (data.scripturebook != undefined || data.scripturebook != '') { %>
                <%= data.scripturebook %> Details
            <% } %>
          </h4>
        </nav>
      </div>
    </nav>

<div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card my-4">
          <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <span style="float: right; padding-right: 40px;"><a class="btn bg-gradient-dark px-3 mb-2 mt-3 ms-4" data-class="bg-white" href="/readings">Go Back To Table</a></span>
            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
              <h6 class="text-white text-uppercase ps-3 text-lg">
                <% if (data.scripturebook != undefined || data.scripturebook != '') { %>
                    <%= data.scripturebook %> Reading
                <% } %>
              </h6>
            </div>
          </div>
          <div class="card-body px-0 pb-2">
            <div class="p-0">
              <table class="table align-items-center mb-0">
                <thead>
                  <tr>
                    <th class="text-uppercase text-center text-secondary text-s font-weight-bolder opacity-7 ps-2">Scripture Book</th>
                    <th class="text-uppercase text-center text-secondary text-s font-weight-bolder opacity-7 ps-2">Book</th>
                    <th class="text-uppercase text-center text-secondary text-s font-weight-bolder opacity-7 ps-2">Chapter</th>
                  </tr>
                </thead>
                  <tbody>
                    <tr>
                      <td class="align-middle text-center col-4" style="border-bottom: 1px solid #f0f2f5; border-right: 1px solid #f0f2f5;">
                        <div class="text-sm mb-0">
                            <% if (data.scripturebook != undefined || data.scripturebook != '') { %> 
                                <h4><%= data.scripturebook %></h4>
                            <% } %>
                        </div>
                      </td>
                      <td class="align-middle text-center col-4" style="border-bottom: 1px solid #f0f2f5; border-right: 1px solid #f0f2f5;">
                        <div class="text-sm mb-0">
                            <% if (data.book != undefined || data.book != '') { %>
                                <h4><%= data.book %> </h4>
                            <% } %>
                        </div>
                      </td>
                      <td class="align-middle text-center col-4" style="border-bottom: 1px solid #f0f2f5; border-right: 1px solid #f0f2f5;">
                        <div class="text-sm mb-0">
                            <% if (data.chapter != undefined || data.chapter != '') { %>
                                <h4><%= data.chapter %></h4>
                            <% } %>
                        </div>
                      </td>
                    </tr> 
                  </tbody>
              </table>
              <div style="padding-right: 20px; float: right;">
                <span><a class="btn bg-gradient-dark px-3 mb-2 mt-4 ms-4" data-class="bg-white" href="/readings/update-book?ID=<%= data.id %>">Edit Book</a></span>
                <span><a class="btn bg-gradient-dark px-3 mb-2 mt-4 ms-4" data-class="bg-white" href="/readings/delete-book?ID=<%= data.id %>">Delete Book</a></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>